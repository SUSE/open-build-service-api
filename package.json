{
  "name": "@dcermak/open-build-service-api",
  "version": "0.0.1",
  "description": "Typescript wrapper for the API of the Open Build Service",
  "license": "MIT",
  "repository": "https://github.com/dcermak/open-build-service-api",
  "author": {
    "name": "Dan Čermák",
    "email": "dcermak@suse.com",
    "url": "https://github.com/dcermak/"
  },
  "keywords": [
    "open-build-service",
    "api",
    "api-wrapper",
    "api-client",
    "typescript"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "tslint --project ./tsconfig.json --force --format verbose \"src/**/*.ts\"",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn run build",
    "build": "tsc --pretty",
    "test": "yarn run build && mocha --require ts-node/register --recursive \"test/**/*.test.ts\"",
    "coverage": "nyc --include=\"src/**/*.ts\" --reporter=text --reporter=html --reporter=lcov mocha --require ts-node/register --recursive \"test/**/*.test.ts\"",
    "clean": "rm -rf ./lib ./coverage/ ./.nyc_output ./documentation",
    "watch": "yarn run build -- --watch",
    "watch:test": "yarn run test -- --watch",
    "documentation": "typedoc --mode modules --theme minimal --out ./documentation src/"
  },
  "dependencies": {
    "config-ini-parser": "^1.2.2",
    "xml2js": "^0.4.22"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-things": "^0.0.34",
    "@types/mocha": "^7",
    "@types/mock-fs": "^4",
    "@types/node": "^13",
    "@types/xml2js": "^0.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "mocha": "^7",
    "mock-fs": "^4.10.1",
    "nock": "^12",
    "nyc": "^15",
    "prettier": "^2",
    "ts-node": "^8.4",
    "tslint": "^6",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.17",
    "typescript": "^3.7"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "prettier": {
    "trailingComma": "none"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
