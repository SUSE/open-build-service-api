{
  "name": "obs-ts",
  "version": "0.0.1",
  "description": "obs-ts",
  "repository": "",
  "author": "",
  "license": "LGPL-3.0-only",
  "author": "Dan Čermák <dcermak@suse.com>",
  "keywords": [
    ""
  ],
  "files": [
    "lib"
  ],
  "main": "lib/main.js",
  "types": "lib/main.d.ts",
  "scripts": {
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "build": "tsc --pretty",
    "test": "npm run build && mocha --require ts-node/register --recursive \"test/**/*.test.ts\"",
    "coverage": "nyc --include=\"src/**/*.ts\" --reporter=text --reporter=html --reporter=lcov mocha --require ts-node/register --recursive \"test/**/*.test.ts\"",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "config-ini-parser": "^1.2.2",
    "xml2js": "^0.4.22"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-things": "^0.0.34",
    "@types/mocha": "^5.2.5",
    "@types/mock-fs": "^3.6.30",
    "@types/node": "^12.11.1",
    "@types/xml2js": "^0.4.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-things": "^0.2.0",
    "mocha": "^6.2.1",
    "mock-fs": "^4.10.1",
    "nock": "^11.3.5",
    "nyc": "^14.1.1",
    "prettier": "^1.14.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "lib"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [],
    "all": true
  }
}
